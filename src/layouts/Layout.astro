---
import Footer from "@/components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" http-equiv="Content-Type" content="text/html" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="title"
      content="Orzle Technology, a top-notch Software Company In Kolkata"
    />
    <meta
      name="description"
      content="Orzle is a technology company in Kolkata that offers web-development,
					desktop application development, mobile-app development, digital marketing,
					branding & graphic content designing
				"
    />
    <meta
      name="keywords"
      content="web-application, desktop s/w, digital marketing, graphic design, branding, malda, kolkata"
    />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />

    <meta name="generator" content={Astro.generator} />
    <link rel="cannonical" href="https://orzle.io" />

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Black+Ops+One&display=swap"
      rel="stylesheet"
    />

    <link
      rel="preload"
      href="/fonts/index.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript><link rel="stylesheet" href="/fonts/index.css" /></noscript>
    <!-- end:fonts -->

    <title>{title} | Orzle</title>
  </head>

  <body>
    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --bg: 241, 240, 247;
    --accent: 254, 205, 211;

    --bg-gradient: linear-gradient(
      -45deg,
      rgba(var(--accent), 0.75) 5%,
      rgb(var(--bg)) 65%
    );
  }

  body {
    background: var(--bg-gradient);
    height: 100%;
  }
</style>
